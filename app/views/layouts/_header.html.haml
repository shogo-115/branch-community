.header
  .header__header-left
    .logo
      Branch Community
      = icon('fa', 'tree')
  .header__header-right
    -if user_signed_in?
      = image_tag current_user.image.url, alt: "NoImage"
      .user-name 
        = current_user.name 
        様
      .icons
        .icons__icon
          = link_to edit_user_registration_path(current_user) do
            = icon('fas', 'user')
        .icons__icon
          = link_to admin_salonfavorites_path(current_user) do
            = icon('fa', 'star')
    -else
      .sign-in-header
        .sign-in-salon
          =link_to "サロン運営者様 新規登録・ログイン", new_admin_session_path
        .sign-in-user
          =link_to "ユーザー様 新規登録・ログイン", new_user_session_path