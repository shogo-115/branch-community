.AccountPage
  .AccountPage__title
    %h3 新規サロンアカウント作成
    = render "admins/shared/links"
  .AccountPage__form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .FormField
        .FormField__label--normal
          = f.label :サロン名
        .FormField__input--normal
          = f.text_field :name, autofocus: true
      .FormField
        .FormField__label--normal
          = f.label :カテゴリー選択
        .FormField__input--normal
          = f.select :category, Admin.categories.keys, {prompt: '選択してください'}
      .FormField
        .FormField__label--normal
          = f.label :所在地
        .FormField__input--normal
          = f.select :birth_place, Admin.birth_places.keys, {prompt: '選択してください'}
      .FormField
        .FormField__label--normal
          = f.label :プロフィール
        .FormField__input--normal
          = f.text_field :profile
      .FormField
        .FormField__label--normal
          = f.label :メールアドレス
        .FormField__input--normal
          = f.email_field :email
      .FormField
        .FormField__label--normal
          = f.label :プロフィール画像選択
        .FormField__input--normal
          = f.file_field :image
      .FormField
        .FormField__label--normal
          = f.label :パスワード
          %i (英数字8文字以上)
        .FormField__input--normal
          = f.password_field :password, autocomplete: "off"
      .FormField
        .FormField__label--normal
          = f.label :パスワード（再確認）
        .FormField__input--normal
          = f.password_field :password_confirmation, autocomplete: "off"
      .actions
        = f.submit "アカウントを作成する", class: 'Button UserButton'
