.AccountPage
  .AccountPage__title
    %h3 新規ユーザーアカウント作成
    = render "users/shared/links"
  .AccountPage__form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .FormField
        .FormField__label--normal
          = f.label :ユーザー名
        .FormField__input--normal
          = f.text_field :name, autofocus: true
      .FormField
        .FormField__label--normal
          = f.label :性別
        .FormField__input--normal
          = f.select :sex, User.sexes.keys, {prompt: '選択してください'}
      .FormField
        .FormField__label--normal
          = f.label :生年月日
        .FormField__input--normal
          = f.date_select :birth_date, use_month_numbers: true,  start_year: 1930, end_year: (Time.now.year - 18), default: Date.new(1989, 1, 1)
      .FormField
        .FormField__label--normal
          = f.label :都道府県
        .FormField__input--normal
          = f.select :birth_place, User.birth_places.keys, {prompt: '選択してください'}
      .FormField
        .FormField__label--normal
          = f.label :プロフィール
        .FormField__input--normal
          = f.text_field :profile
      .FormField
        .FormField__label--normal
          = f.label :メールアドレス
        .FormField__input--normal
          = f.email_field :email
      .FormField
        .FormField__label--normal
          = f.label :アイコン画像選択
        .FormField__input--normal
          = f.file_field :image
      .FormField
        .FormField__label--normal
          = f.label :パスワード
          %i (英数字8文字以上)
        .FormField__input--normal
          = f.password_field :password, autocomplete: "off"
      .FormField
        .FormField__label--normal
          = f.label :パスワード（再確認）
        .FormField__input--normal
          = f.password_field :password_confirmation, autocomplete: "off"
      .actions
        = f.submit "アカウントを作成する", class: 'Button UserButton'
